extends ../layout

block content
  .container
    .jumbotron
      h1= title
      p
        +pluralizeItemsNumber(theatres.length)

    include ../flash

    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded.mb-3
      button.navbar-toggler.navbar-toggler-right(
      type="button"
      data-toggle="collapse"
      data-target="#filter-nav"
      )
        span.navbar-toggler-icon
      div#filter-nav.collapse.navbar-collapse
        div.mr-auto
        div
          a.btn.btn-sm.btn-primary(href='/admin/theatres/create') Создать новый

    table.table
      thead
        tr
          th Название ↓
          th Аббревиатура
          th Ключ
          th(width=100)
      tbody
        each theatre in theatres
          tr
            td
              a(href='/admin/theatres/edit/' + theatre.key)= theatre.title
            td= theatre.abbreviation
            td= theatre.key
            td
              button.btn.btn-sm.btn-outline-danger(
                data-action='remove'
                data-url='/admin/theatres/remove/' + theatre.key
                data-id=theatre.id
                data-return-url='/admin/theatres'
              ) Удалить