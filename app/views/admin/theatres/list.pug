extends ../layout

block content
  .container
    .jumbotron
      h1= title
      p
        +pluralizeItemsNumber(theatres.length)

    include ../flash

    nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
      button.navbar-toggler.navbar-toggler-right(
      type="button"
      data-toggle="collapse"
      data-target="#plays-list-nav"
      )
        span.navbar-toggler-icon
      div#plays-list-nav.collapse.navbar-collapse
        div.mr-auto
        div
          a.btn.btn-sm.btn-primary(href='/admin/theatres/create') Создать новый

    table.table
      thead
        tr
          th Название ↓
          th Аббревиатура
          th Ключ
      tbody
        each theatre in theatres
          tr
            td
              a(href='/admin/theatres/edit/' + theatre.key)= theatre.title
            td= theatre.abbreviation
            td= theatre.key