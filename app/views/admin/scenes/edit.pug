extends ../layout

block content
  .container
    .jumbotron
      +title(title)

    p
      a(href='/admin/scenes') ← Назад

    include ../flash

    form(action='' method='post')
      if (scene.id)
        .form-group.row
          label.col-sm-2.col-form-label(for='title') ID
          .col-sm-10
            p.form-control-static= scene.id
      .form-group.row
        label.col-sm-2.col-form-label(for='title') Название
        .col-sm-10
          input.form-control(type='text' id='title' name='title' value=scene.title)
      .form-group.row
        label.col-sm-2.col-form-label(for='key') Ключ
        .col-sm-10
          input.form-control(type='text' id='key' name='key' value=scene.key)
      hr
      button.btn.btn-primary(type='submit') Сохранить