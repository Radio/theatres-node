each show in date.shows
  - showDateMoment = moment(show.date)
  .show-row(
    class='scene-' + show.scene.key +
          ' theatre-' + show.theatre.key +
          (show.play.premiere ? ' premiere' : '') +
          (show.play.musical ? ' musical' : '') +
          (show.play.dancing ? ' dancing' : '') +
          (show.play.forKids ? ' for-kids' : ' for-adults')
  )
    .row.show-info.show-brief(
      class='{{ show.theatre_key }}'
      data-ng-class='getShowClass(show)'
      itemscope=''
      itemtype='http://schema.org/TheaterEvent'
    )
      .show-time.col-md-1
        time(
          datetime=showDateMoment.format('YYYY-MM-DDTHH:mmZZ')
          itemprop='startDate'
          content=showDateMoment.format('YYYY-MM-DDTHH:mmZZ')
        )
          = showDateMoment.format('H:mm')
      .show-brief.col-md-11
        h4.show-title
          a(href=(show.play.url || false) itemprop='url' content=show.play.url)
            span(itemprop='name')= show.play.title
        .show-scene
          div(itemprop='location', itemscope='', itemtype='http://schema.org/PerformingArtsTheater')
            meta(itemprop='name', content=show.theatre.houseSlug ? 'Дом Актера' : show.theatre.title)
            meta(itemprop='address', content='Kharkiv, Ukraine')
          span(itemprop='performer', itemscope='', itemtype='http://schema.org/TheaterGroup')
            link(itemprop='url', href=show.theatre.url)
            meta(itemprop='name', content=show.theatre.title + (show.theatre.houseSlug ? ', Дом Актера' : ''))
            = show.theatre.title + (show.theatre.houseSlug ? ', Дом Актера' : '')
          span.show-separator &nbsp;·&nbsp;
          span.nobr= show.scene.title
          if show.price || show.buyTicketUrl
            span(itemprop='offers', itemscope='', itemtype='http://schema.org/Offer')
              span.show-separator &nbsp;·&nbsp;
              if show.price
                meta(itemprop='priceCurrency', content='UAH')
              if show.price && !show.buyTicketUrl
                span.price.nobr(itemprop='price', content=show.price)= show.price
              if show.buyTicketUrl
                a(title='Купить билеты' itemprop='url' href=show.buyTicketUrl)
                  if show.price
                    span.price.nobr(itemprop='price', content=show.price)= show.price
                  else
                    span.price.nobr купить билеты
          if show.play.genre
            span.hidden-sm-down
              span.show-separator &nbsp;·&nbsp;
              =show.play.genre
    .show-details
      .row
        include show-details
