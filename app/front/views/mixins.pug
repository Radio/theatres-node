mixin priceSpecification(price)
  - var prices = (price.match(/\d+/g) || []).map(price => Number(price)).sort((a, b) => a - b);
  if prices && prices.length === 1
    meta(itemprop='price', content=prices[0])
  if prices && prices.length > 1
    meta(itemprop='minPrice', content=prices[0])
    meta(itemprop='maxPrice', content=prices[prices.length - 1])

mixin nl2br(text)
  | !{(text || '').replace(/\n/g, '<br/>')}

mixin googleAnalyticsCode
  script.
      (function (i, s, o, g, r, a, m) {
          i['GoogleAnalyticsObject'] = r;
          i[r] = i[r] || function () {
                  (i[r].q = i[r].q || []).push(arguments)
              }, i[r].l = 1 * new Date();
          a = s.createElement(o),
              m = s.getElementsByTagName(o)[0];
          a.async = 1;
          a.src = g;
          m.parentNode.insertBefore(a, m)
      })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');
      ga('create', 'UA-12687148-6', 'auto');
      ga('send', 'pageview');
